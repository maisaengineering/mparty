<%= link_to "Create Event", new_event_path, class: "createEventbtn" %>
<h3>Upcoming Events</h3>
<div class="upComingEventContainer">
    <div class="upComingEventList">
    <% if @upcoming_all_events.present? %>
      <% @upcoming_all_events.each do |event| %>
          <div class="EventListBox">
            <ul class="clearfix">
              <li class="event">
                <div class="date">
                  <% if event.starts_at == Date.today %>
                    Today
                  <% else %>
                    <%= event.starts_at %>
                  <% end %>
                </div>
                <div class="title"><%= link_to event.name, event_path(event.id) %></div>
                <%= event.owner.email%>
                <% if event.owner.email == current_spree_user.email %>
                  <div class="options"><%= link_to 'Add Guests', add_guests_path(:event_id => event.id) %></div>
                <% end %>
              </li>
            </ul>
          </div>
      <% end %>
    <% else %>
      <p>You don't Have any UpComing Events</p>
    <% end %>  
    </div>
</div>

<h3>Past Events</h3>

<div class="pastEventContainer">
  <div class="pastEventList">
  <% if @previous_all_events.present? %>
    <% @previous_all_events.each do |event| %>
        <div class="EventListBox">
          <ul class="clearfix">
            <li class="event">
              <div class="date"> <%= event.starts_at %></div>
              <div class="title"><%= link_to event.name, event_path(event.id) %></div>
              <%= event.owner.email%>
              <% if signed_in? and event.owner.email == current_spree_user.email %>
                  <div class="options"><%= link_to 'Add Guests', add_guests_path(:event_id => event.id) %></div>
              <% else %>
                  <div class="options"><%= link_to 'View event', event_path(event.id) %></div>
              <% end %>
            </li>
          </ul>
        </div>
    <% end %>
   <% else %>
      <p>You don't Have any Past Events</p>
    <% end %>  
  </div>
</div>

<h3>Public Events</h3>

<div class="publicEventContainer">
  <div class="publicEventList">
  <% if @public_events.present? %>
    <% @public_events.each do |event| %>
        <div class="EventListBox">
          <ul class="clearfix">
            <li class="event">
              <div class="date"> <%= event.starts_at %></div>
              <div class="title"><%= link_to event.name, "#" %></div>
              
                  <div class="options"><%= link_to 'Join', "#" %></div>
             
            </li>
          </ul>
        </div>
    <% end %>
   <% else %>
      <p>There is No Public Events</p>
    <% end %>  
  </div>
</div>