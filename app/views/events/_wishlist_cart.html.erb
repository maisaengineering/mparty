<div id="wishlist_header" class="row">
  <h1><%= @wishlist.name %></h1>
</div>
<table id="wishlist">
  <thead>
  <tr>
    <% if @wishlist.user == spree_current_user %>
      <th><%= Spree.t(:wishlist_actions) %></th>
    <% end -%>
    <th><%= Spree.t(:item_description) %></th>
    <th></th>
    <th>Requested Quantity</th>
    <th>Purchased Quantity</th>
    <th><%= Spree.t(:price) %></th>
    <th>Select Quntity</th>
  </tr>
  </thead>
  <tbody id="line_items">

  <% if @wishlist.wished_products.size > 0 %>
  <%= form_for :order, :url => "/orders/populate" do |f| %>
      <% @wishlist.wished_products.each_with_index do |wish,i|
        variant = wish.variant
        product = variant.product %>
          <tr class="<%= cycle('', 'alt') %>">
            <td>
              <% if variant.images.length == 0 %>
                <%= small_image(variant.product) %>
              <% else %>
                <%= image_tag variant.images.first.attachment.url(:small) %>
              <% end %>
            </td>
            <td>
              <h4><%= product.name %></h4>
              <p><%= variant_options variant %></p>
              <%= truncate(product.description, :length => 100, :omission => "...") %>
            </td>
            <td>
              <%= wish.quantity %>
            </td>
            <td>
              <%= wish.quantity_purchased %>
            </td>
            <td>
              <%= number_to_currency(variant.price) %>
            </td>
            <td>
              <%= hidden_field_tag "variant_id[#{i}]", variant.id %>
              <% if !wish.is_purchased %>
                <%= number_field_tag "quantity[#{i}]", 0, in:0..wish.quantity-wish.quantity_purchased %>
              <% else %>
                <p>Already Purchased</p>  
              <% end %>
            </td>
          </tr>
      <% end -%>
      <tr>
        <td colspan="6"><%= f.submit "Add to Cart" %></td>
      </tr>
      
    <% end %>  
  <% else -%>
      <tr>
        <td colspan="6"><%= Spree.t(:your_wishlist_is_empty) %></td>
      </tr>
  <% end -%>
  </tbody>
</table>