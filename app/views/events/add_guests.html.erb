
<h2>Add Guests</h2> </br>

<% if @wish_list %>
<p> <%= @wish_list.name%> </p>
	<%= render :partial => "show_wishlist", :locals => {:wishlist => @wish_list} %>
<% else %>	
	<p> Do you want to send wish list? please <%= link_to 'create', spree.new_wishlist_path(event_id: @event.id) %> one</p>
<% end %>	
</br>

<%= form_tag(send_invitation_path, method: "post") do %>
<% if @wish_list && @wish_list.wished_products.size > 0 %>
	<p>Add Wishlist <%= check_box_tag 'add_wishlist' %> </p>
<% end %>	
<%= text_area_tag "friend_emails" , nil, placeholder: "Enter friend's email with comma separated", class:"inviteEmail multiple-email required"%><br/><br/>
<%= hidden_field_tag(:event_id, @event.id) %>
<%= submit_tag("Invite") %>
<%= submit_tag("Cancel") %>
<% end %>