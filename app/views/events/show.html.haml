%h1= @event.name
- if current_spree_user
  - if signed_in? && current_spree_user.id != @event.user_id
    .text-center= render 'attend_form'
  - if current_spree_user.id == @event.user_id
    %p
      %b You are hosting this event
%p
  %b Name:
  = @event.name
%p
  %b Location:
  = @event.location
%p
  %b Host:
  = @event.owner.login
%p
  %b Description:
  = @event.description

%p
  %b Location:
  = @event.name

%p
  =link_to "View wishlist", '#', class: "UserResponseButtons"

%h3 Who's Coming?
%h5.ResponseButtons.Green Accepted - #{@event.attendees('accepted')}
%h5.ResponseButtons.Yellow Maybe - #{@event.attendees('maybe')}
%h5.ResponseButtons.Gray Pending - #{@event.attendees('pending')}
%h5.ResponseButtons.Red rejected - #{@event.attendees('rejected')}