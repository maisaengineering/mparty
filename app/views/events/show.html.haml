%h1= @event.name
- if current_spree_user
  - if signed_in? && current_spree_user.id != @event.user_id
    .text-center= render 'attend_form'
  - if current_spree_user.id == @event.user_id
    %p
      %b You are hosting this event
%p
  %b Name:
  = @event.name
%p
  %b Location:
  = @event.location
%p
  %b Host:
  = @event.owner.login
%p
  %b Description:
  = @event.description

%p
  %b Location:
  = @event.name

%p
  =link_to "View wishlist", '#', class: "UserResponseButtons"
  = link_to 'Add Guests', add_guests_path(:event_id => @event.id), class: "UserResponseButtons"

%h3 Who's Coming?
%p
  = link_to "Accepted - #{@event.attendees('accepted')}", '#', class: "ResponseButtons Green"
  = link_to "Maybe - #{@event.attendees('maybe')}", '#',class: "ResponseButtons Yellow"
  = link_to "Pending - #{@event.attendees('pending')}", '#',class: "ResponseButtons Gray"
  = link_to "rejected - #{@event.attendees('rejected')}",'#', class: "ResponseButtons Red"
