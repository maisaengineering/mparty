%h1= @event.name
- if signed_in? && current_spree_user.id != @event.user_id
  .text-center= render 'attend_form'
- if current_spree_user.id == @event.user_id
  %p
    %b You are hosting this event
%p
  %b Name:
  = @event.name
%p
  %b Location:
  = @event.location
%p
  %b Host:
  = @event.owner.login
%p
  %b Description:
  = @event.description
%b Who's Going:
%ol
  - @event.rsvps.each do |rsvp|
    %li= rsvp.user.login

