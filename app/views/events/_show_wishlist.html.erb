<% if @wishlist.wished_products.size > 0 %>
<div class="col-md-6 wishlist_eventpreview" style="width:55%;">
  <h4>Wishlist</h4>
  <div class="event_wishlist_table">
    <div class="scroll_wishlist_table">
    <div class="row event_pre_wishlist_block mtop10 txt_bold">
      <div class="col-md-2"></div>
      <div class="col-md-3">DESCRIPTION</div>
      <div class="col-md-3">REQ QUANTITY</div>
      <div class="col-md-2">PURCHASED QUANTITY</div>
      <div class="col-md-1">PRICE</div>
    </div>

    <% @wishlist.wished_products.each do |wish| %>
        <%  variant = wish.variant  %>
        <% product = variant.product %>
    <div class="row wishlist_popup_center event_pre_wishlist_block">
      <div class="col-md-2">
        <div class="wishlist_img_block">
          <% if variant.images.length == 0 %>
              <%= small_image(variant.product) %>
          <% else %>
              <%= image_tag variant.images.first.attachment.url(:small) %>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <h5><%= product.name %></h5>
      </div>
      <div class="col-md-3">
        <p><%= wish.quantity %></p>
      </div>
      <div class="col-md-2">
        <p><%= wish.quantity_purchased %></p>
      </div>
      <div class="col-md-1">
        <p><%= number_to_currency(variant.price) %></p>
      </div>
    </div>
    <% end %>
    <div class="row no_margin"></div>
  </div>
</div>
    </div>
<% end %>