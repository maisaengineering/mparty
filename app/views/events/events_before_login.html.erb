<div class="container">
  <div class="row">
    <div class="mtop20 col-md-4">
      <%= form_tag("/events",method: :get) do%>
          <div class="input-group">
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder:'Find events by name or city' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn btn-default", id: "query_submimt_form") do %>
                <span class="glyphicon glyphicon-search"></span>
            <% end %>
            </span>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div id="trending_events">
      <%= render 'events/events_list',events: @trending_events, type: "trending" %>
    </div>
    <%= paginate @trending_events,params: {query: params[:query] } %>
  </div>
</div>

<script type="text/javascript">
    if($('#query').val() ==  "") {
        $('#query_submimt_form').prop('disabled', true);
    }
    $('#query').keyup(function(){
        if($('#query').val() !=  "") {
            $('#query_submimt_form').prop('disabled', false);
        }
        else {
            $('#query_submimt_form').prop('disabled', true);
        }
    });
</script>

