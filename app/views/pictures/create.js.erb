<% if @picture.new_record? %>
bootbox.alert("Failed to upload picture: <%= j @picture.errors.full_messages.join(', ').html_safe %>");
if ($('#number_of_files_chosen strong').length){
  $('#number_of_files_chosen strong').text(parseInt(parseInt($("#number_of_files_chosen strong").text()) - 1))
  $('#number_of_files_chosen').hide().fadeIn('slow')
}
<% else %>
 $("#pictures").append("<%= j render(@picture) %>").fadeIn('slow');

<% end %>
$('.loading-indicator').hide()