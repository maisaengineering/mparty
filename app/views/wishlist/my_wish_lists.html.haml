.container-fluid{:style => "background-color:#f1f2f7"}
  .container
    .row
      .title_name My Wishlist
    .row
      .col-md-12.my_wishlists
        #accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
          - unless @events.blank?
            - @events.each_with_index do |event,index|
              - if event.wishlist
                - wishlist = event.wishlist
                .panel.panel-default.wishlist{"aria-controls" => "collapse#{index}", "aria-expanded" => "true", "data-parent" => "#accordion", "data-target" => "#collapse#{index}", "data-toggle" => "collapse"}
                  #headingOne.panel-heading{:role => "tab"}
                    %h4.panel-title
                      %a{"aria-controls" => "collapse#{index}", "aria-expanded" => "true", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse#{index}"}
                        #{event.name}
                        %span.italic_style (#{pluralize(wishlist.wished_products.count,'item')})
                        .pull-right
                          %span.glyphicon.glyphicon-calendar
                          #{l(wishlist.created_at.to_date)}
                  .panel-collapse.collapse{class: "#{index ==0 ? 'in' : nil}","aria-labelledby" => "headingOne", :role => "tabpanel",id: "collapse#{index}"}
                    .panel-body
                      .col-md-12
                        %a.color_success{:href => "#"}
                          %h4= link_to 'Wishlist',event_url(event)
                        .row.mbottom10
                          - wishlist.wished_products.each do |wished_product|
                            - variant = wished_product.variant
                            - product = variant.product
                            - p_url = spree.product_url(product, :taxon_id => @taxon.try(:id))
                            .col-md-6.mbottom10
                              .row.border_table.no_margin
                                .col-md-3
                                  - if variant.images.length == 0
                                    = link_to small_image(variant.product),p_url
                                  - else
                                    = link_to image_tag(variant.images.first.attachment.url(:small)),p_url
                                .col-md-6
                                  %h5= link_to product.name ,p_url
                                  %p Requested Quantity  #{wished_product.quantity}
                                  %p
                                    = link_to "Purchased Quantity #{wished_product.quantity_purchased}" ,wishlist_purchases_path(wishlist.id,wished_product.id),remote: true,title: 'click to view users' ,class: 'color_success txt_bold purchased_users',data: {placement: 'top',toggle: 'tooltip'}
                                .col-md-2
                                  %h5= number_to_currency(variant.price,unit: get_currency_symbol)
      #wishlistPurchasedUsers
:javascript
  $(".my_wishlists .wishlist .purchased_users")
      .bind('ajax:beforeSend', function() { $('.loading-indicator').fadeIn('slow') })
      .bind('ajax:success', function(e,data, status, xhr) {
        $('.loading-indicator').hide();
        $('#wishlistPurchasedUsers').html(xhr.responseText)
        $('#wishlistPurchasedUsersModal').modal('show');
      })

