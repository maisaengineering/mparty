.container.events_all_bg
  .row.search_bg
    .venue_block
      %h1 Find Your Venue
      .form-group{:style => "position:relative;"}
        = form_tag venues_path,method: :get do
          %input.form_search{:placeholder => 'Search by Name or City or State or Zip', :type => "search" ,name: 'query',value: params[:query]}/
          %button.venue_src_icon
            %span.glyphicon.glyphicon-search.pull-left
          = hidden_field_tag(:from_event,true)  if params[:from_event].present?
        -#%select.form_search.crt_loc{:placeholder => "Search", :type => "text"}
          %option Current City
          %option Hyderabad
          %option Banglore
        -#%button.adv_search_btn{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
          %p Advanced Search
        = render 'adv_search_form'
  - if params[:from_event]
    .row
      .col-md-12.ptop
        =link_to('<span class="glyphicon glyphicon-chevron-left"></span> Back to create Event'.html_safe, new_event_path,class: 'btn btn-warning')         
  - if (params[:query] || params[:city]) and !@venues.blank?
    %hr/
    -if params[:city]
      %h2 suggestions results
    -else
      %h2 search results
    = render 'venues',venues: @venues
  %hr/
  - unless @top_five.blank?
    %h2 Top Venues
    = render 'venues',venues: @top_five