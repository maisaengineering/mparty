<div class="container-fluid">
  <div class="container" >
    <!--modal boxes************************************************************-->
    <!--add to wishlist modal box-->
    <%= render 'wishlist_items' %>
    <!--modalbox end-->
    <!--shipping modal box-->
    <%= render 'shipping_address_form' %>
