<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title><%= @event.name %></title>
<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
</head>

<body  style="width:100%; height:100%; overflow:hidden; background-color:#c72a3a; font-family: 'Open Sans', sans-serif;">

  <div style="width:700px; margin:20px auto; height:70px;"> 
    <img src="https://lh5.googleusercontent.com/-SdYD8IW7vFA/VOSV2UJyv7I/AAAAAAAAASc/jC4tvvDm3lE/w220-h53-no/logo-2.png" style="margin:10px; margin-top:8px;"> 
  </div>

<div style="width:600px;margin:0 auto; font-size:18px;color:#555; background-color:#ffffff; padding:40px 50px; "> 
  <!--main header end-->
  <br>
  <span style="color:#555;">Hello,</span> <br><br>
  <span style="color:#555;">You are invited to the following event by <strong> <%= @sender.full_name %> </strong> </span> <br><br>
  <!-- invitation -->
  <p><strong>Event :</strong> <%= @event.name %></p>
  <p><strong>Location :</strong>
    <% if @event.venue.present? %>
        <%= @event.venue.name %>,
    <% end %>
    <%= @event.full_address %></p>
  <p><strong>Date :</strong>
    <% if @event.starts_at == @event.ends_at  %>
        <% if @event.starts_at== Date.today %>
            Today <%= "#{@event.start_time.try(:strftime, '%I:%M %p')}" " - " "#{@event.end_time.try(:strftime, '%I:%M %p')}"%>
        <% else %>
            <%= "#{@event.starts_at.strftime('%d/%m/%y ')}"  "#{@event.start_time.try(:strftime, '%I:%M%p')}" " - " "#{@event.end_time.try(:strftime, '%I:%M%p')}" %>
        <% end %>
    <% else %>
        <% if @event.starts_at== Date.today %>
            Today <%= @event.start_time.try(:strftime, '%I:%M %p')%> -
            <%= "#{@event.ends_at.strftime('%d/%m/%y ')}" "#{@event.end_time.try(:strftime, '%I:%M %p')}"%>
        <% else %>
            <%= "#{@event.starts_at.strftime('%d/%m/%y ')}" " " "#{@event.start_time.try(:strftime, '%I:%M %p')}"%> -
            <%= "#{@event.ends_at.strftime('%d/%m/%y ')}"  ' ' "#{@event.end_time.try(:strftime, '%I:%M %p')}"%>
        <% end %>
    <% end %></p>
    <br><br>

  <div style="width:240px; margin:20px auto;">
    <%= link_to "View Invitation",  @url,style: "background-color:#8bd92f; text-decoration:none; padding:12px 50px; width:240px; margin:10 auto;border:1px solid #4cae4c; border-radius:30px;color:#ffffff; cursor:pointer; outline:none; margin-top:30px; font-size:16px; text-transform:uppercase;"%>
  </div>
</div>

  <!-- footer -->
  <div style="width:700px; margin:0 auto;margin-top:30px; margin-bottom:20px; text-align:center; font-size:12px; color:#eeeeee;">
    <p>
      <img src="https://lh4.googleusercontent.com/-oqI1N40qC6s/VOSV1DC-UzI/AAAAAAAAASg/N4jHsNDNMbE/s128-no/Facebook-128.png" width="32" height="32" alt=""/> &nbsp;
      <img src="https://lh6.googleusercontent.com/-0FlRHbxRmfA/VOSV1WKvvcI/AAAAAAAAAR0/VkYhmVhO3Kg/s128-no/Twitter-128.png" width="32" height="32" alt=""/> &nbsp;
      <img src="https://lh4.googleusercontent.com/--0vUgW06UvE/VOSV1ONYHfI/AAAAAAAAAR8/BZ63L5C5zZk/s128-no/YouTube-128.png" width="32" height="32" alt=""/>
    </p>
    <p><a href="#" style="color:#ffffff;">www.mparty.io</a></p>
    <p style="margin:0px;">Â© Copyright 2015, Mparty. All rights reserved.</p>
  </div>
</body>
</html>

