.modal.fade#reviewItModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Post your review
      .modal-body
        = form_for review, html: { class: 'form-horizontal',remote: true } do |f|
          = hidden_field_tag :resource_id,resource_id
          = hidden_field_tag :resource_type, resource_type
          = f.hidden_field :user_id,value: spree_current_user.id
          .form-group
            %label.col-xs-3.control-label Rating
            .col-xs-7
              -#%input#review_rating{:max => "5", :min => "0", :step => "0.5", :type => "range", :value => "0"}/
              -#.rateit{"data-rateit-backingfld" => "#review_rating"}
              %input#review_rating{name: 'review[rating]',:max => "5", :min => "0", :step => "0.5", :type => "range", :value => "0",class: 'form-control',required: true}/
              .rateit{data: {rateit_backingfld: "#review_rating",rateit_resetable: 'false'}}
          .form-group
            %label.col-xs-3.control-label Review title
            .col-xs-7
              = f.text_field :heading,class: 'form-control'
          .form-group
            %label.col-xs-3.control-label Your review
            .col-xs-7
              = f.text_area :description,rows: 5 ,cols: 10,class: 'form-control'
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary#btnSubmitReview{:type => "button"} Send


