<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<body style="width:100%; height:100%; overflow:hidden; background-color:#c72a3a; font-family: 'Open Sans', sans-serif;">
  <div style="width:700px; margin:20px auto; height:70px;"> 
    <img src="https://lh5.googleusercontent.com/-SdYD8IW7vFA/VOSV2UJyv7I/AAAAAAAAASc/jC4tvvDm3lE/w220-h53-no/logo-2.png" style="margin:10px; margin-top:8px;"> 
  </div>

  <div style="width:600px;margin:0 auto; font-size:18px;color:#555; background-color:#ffffff; padding:40px 50px;"> 
    <div style="width:100%; height:auto; overflow:hidden;">
      <br>
      <span>Hello <%= @inviter.full_name %>,</span> <br><br>
      <span>
        Your friend <i><b> <%= @invitee %></i></b> purchased below products for
        <%= link_to "#{@event.name}", "#{spree.root_url + "events/#{@event.id}"}" %>
      </span> <br><br>
      <!-- invitation -->
      <% @order.line_items.each do |item| %>
        <div style="width:100%; float:left; border:1px solid #cccccc;  height:auto; margin-top:20px; padding:10px 0;">
          <% image = item.variant.images.first %>
          <div style="float:left; width:120px; padding-left:10px;">
            <%= image_tag image.attachment.url(:small) %>
          </div>
          <div style="float:left;">
            <span><%= item.name %></span><br><br>
              <% rq = @event.wishlist.wished_products.where(variant_id: item.variant_id).first.quantity%>
            <span>Requested Quantity <%= rq %></span><br><br>
            <span>Purchased Quantity <%= item.quantity %></span><br><br>
          </div>
          <div style="float:right; margin-top:40px; padding-right:10px;">
            <%= number_to_currency(item.variant.price,unit: Money::Currency.find(Spree::Config.currency).symbol) %>
          </div>
        </div>
      <% end %>
      <br><br>
    </div>

    <div style="text-align:center; margin-top: 20px;">
      <%= link_to "CHECK YOUR WISHLIST", "#{spree.root_url + "my-wish-lists"}", style: "background-color:#8bd92f; padding:10px 15px; width:210px; margin:30 auto;  border:none; color:#ffffff; text-decoration:none; cursor:pointer; outline:none; margin-top:30px; font-size:16px; border-radius:30px;" %>
    </div>
  </div>

    <!-- footer -->
    <div style="width:700px; margin:0 auto;margin-top:30px; margin-bottom:20px; text-align:center; 
        font-size:12px;color:#eeeeee;">
      <p><img src="https://lh4.googleusercontent.com/-oqI1N40qC6s/VOSV1DC-UzI/AAAAAAAAASg/N4jHsNDNMbE/s128-no/Facebook-128.png" width="32" height="32" alt=""/> &nbsp; <img src="https://lh6.googleusercontent.com/-0FlRHbxRmfA/VOSV1WKvvcI/AAAAAAAAAR0/VkYhmVhO3Kg/s128-no/Twitter-128.png" width="32" height="32" alt=""/> &nbsp; <img src="https://lh4.googleusercontent.com/--0vUgW06UvE/VOSV1ONYHfI/AAAAAAAAAR8/BZ63L5C5zZk/s128-no/YouTube-128.png" width="32" height="32" alt=""/> </p>
      <p><a href="#" style="color:#ffffff;">www.mparty.io</a></p>
      <p style="margin:0px;">Â© Copyright 2015, Mparty. All rights reserved.</p>
    </div>

</body>