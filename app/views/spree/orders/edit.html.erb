<% @event = Event.where(id: session[:event_id]).first  if session[:event_id].present? %>
<% @wishlist = @event.wishlist if @event %>
<% @body_id = 'cart' %>
<div class="container-fluid">
  <div class="container" >
    <div class="title_trending">
      <div class="title_bg"></div>
      <div class="title_name"><%= Spree.t(:shopping_cart) %></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @order.line_items.empty? %>
            <div data-hook="empty_cart" class="row wishlist_popup_header no_margin shopping_cart_wishlist">
              <p><%= Spree.t(:your_cart_is_empty) %></p>
            </div>
        <% else %>
            <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart',class: 'form_margin'} do |order_form| %>
                <%= render :partial => 'form', :locals => { :order_form => order_form } %>

                <div class="row wishlist_popup_footer no_margin">
                  <% if @event.nil? %>
                      <div class="col-md-4"></div>
                      <div class="col-md-2">
                        <div id="empty-cart" data-hook>
                          <%= form_tag empty_cart_path, :method => :put do %>
                              <p id="clear_cart_link" data-hook>
                                <%= submit_tag Spree.t(:empty_cart), :class => 'btn btn-lg btn-primary btn-block btn_checkout_update' %>
                                <%#= Spree.t(:or) %>
                                <%#= link_to Spree.t(:continue_shopping), products_path, :class => 'continue button gray' %>
                              </p>
                          <% end %>
                        </div>
                      </div>
                      <% else %>
                      <div class="col-md-6"></div>
                  <% end %>
                  <div class="col-md-2">
                    <%= order_form.text_field :coupon_code, :placeholder => Spree.t(:coupon_code),class: 'form-control coupon_input' %>
                  </div>
                  <div class="col-md-2">
                    <%= button_tag :class => 'btn btn-lg btn-primary btn-block btn_checkout_update', :id => 'update-button' do %>
                        UPDATE
                    <% end %>
                  </div>
                  <div class="col-md-2">
                    <%= button_tag :class => 'btn btn-lg btn-primary btn-block btn_checkout', :id => 'checkout-link', :name => 'checkout' do %>
                        <%= Spree.t(:checkout) %>
                    <% end %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>