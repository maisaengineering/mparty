

<div class="container-fluid banner_padding">   <!-- inner container section -->
  <div class="container" >
    <div class="row">
      <div class="col-md-12">
        <div class="title_name t_left">Change Password </div>
      </div>
    </div>

    <div class="row">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
      <%= form_for @spree_user, :as => :spree_user, :url => spree.update_password_path, :method => :put do |f|  %>
          <div class="col-md-3">
            <div class="row">
              <div class="col-md-12">
                <label></label>
                <%= f.password_field :password ,class: 'form-control' ,placeholder: 'Password' ,required: true,autofocus: true %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <label></label>
                <%= f.password_field :password_confirmation  ,class: 'form-control' ,placeholder: 'Password' ,required: true %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <%= f.hidden_field :reset_password_token %>
                <%= f.submit Spree.t(:update), :class => 'btn btn-primary btn-block' %>
              </div>
            </div>
          </div>
      <% end%>
    </div>
  </div>
</div>