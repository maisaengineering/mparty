
 <div class="container-fluid banner_padding">   <!-- inner container section -->
   <div class="container" >
     <div class="row">
       <div class="col-md-12">
         <div class="title_name t_left">Forgot Password ?</div>
       </div>
     </div>

     <div class="row">
       <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
       <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path,html:{class: 'form-signin'} do |f| %>
         <div class="col-md-3">
           <div class="row">
             <div class="col-md-12">
               <label></label>
               <%= f.email_field :email,value: params[:spree_user].try(:[], :email) ,class: 'form-control' ,placeholder: 'Enter email' ,required: true,autofocus: true %>
               <!-- <span class="err"> error occured!</span>-->
             </div>
           </div>
           <br>
           <div class="row">
             <div class="col-md-12">
               <%= f.submit Spree.t(:reset_password), :class => 'btn btn-success btn-block' %>
             </div>
           </div>
         </div>
       <% end%>
     </div>
   </div>
 </div>
 <!-- end inner container section -->

 </div>