 <div class="container-fluid">
  <br>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
  <h1 class="login-account-txt"> Forgot Password ?</h1>
  <div class="login">
    <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path,html:{style: 'margin:45px;'} do |f| %>
        <div class="form-group">
          <h4>Please enter your email address</h4><br><br><br>
          <label>Email address</label>
          <%= f.email_field :email,value: params[:spree_user].try(:[], :email) ,class: 'form-control' ,placeholder: 'Enter email' ,required: true %>
        </div>
        <%= f.submit Spree.t(:reset_password), :class => 'btn_l btn_l-login' %>
    <% end %>
  </div>
</div>