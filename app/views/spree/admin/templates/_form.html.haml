= nested_form_for @spree_admin_template do |f|
  - if @spree_admin_template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@spree_admin_template.errors.count, "error")} prohibited this spree_admin_template from being saved:"
      %ul
        - @spree_admin_template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name


  #designs
    = f.fields_for :designs, :wrapper => false do |design_form|
      .fields
        %label Content
        .designTextarea
          = design_form.text_area :content, rows: 5
        .customButton
          = design_form.link_to_remove "Remove this design"

  .customButton
    = f.link_to_add "Add new design", :designs, "data-target" => "#designs"

  .actions
    = f.submit 'Save'
