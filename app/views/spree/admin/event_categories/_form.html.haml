= form_for @event_category do |f|
  - if @event_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event_category.errors.count, "error")} prohibited this event_category from being saved:"
      %ul
        - @event_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
