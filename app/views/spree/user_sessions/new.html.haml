.container-fluid.banner_padding
  / inner container section
  .container
    .row
      .col-md-12
        .title_name.t_left Login
    .row
      = render :partial => 'spree/shared/error_messages', :locals => { :target => @user }
      = form_for(Spree::User.new, as: :spree_user, url: spree.spree_user_session_path,html: {class: 'form-signin'})  do |f|
        .col-md-3
          .row
            .col-md-12
              %label
              = f.email_field :email,placeholder: 'Email Address*',class: 'form-control', required: true,autofocus: true
            .col-md-12
              %label
              = f.password_field :password,placeholder: 'Password',class: 'form-control', required: true
          %br
            .row
              .col-md-12
                = f.submit "Login", class: "btn btn-primary btn-block"
              .col-md-12.ptop
                = link_to "Forgot your password?","#"
                = link_to "Register","#"
/ end inner container section