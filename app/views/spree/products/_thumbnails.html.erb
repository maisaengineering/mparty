<%# no need for thumbnails unless there is more than one image %>
<% if (@product.images + @product.variant_images).uniq.count > 1 %>
    <% @product.images.each do |i| %>
        <div class="col-md-4 tmb-all tmb-<%= i.viewable.id %>">
          <%= link_to(image_tag(i.attachment.url(:small)), i.attachment.url(:product)) %>
        </div>
    <% end %>

    <% if @product.has_variants? %>
        <% @product.variant_images.each do |i| %>
            <% next if @product.images.include?(i) %>
            <div class="col-md-4 vtmb tmb-<%= i.viewable.id %>">
              <%= link_to(image_tag(i.attachment.url(:small)), i.attachment.url(:product)) %>
            </div>
        <% end %>
    <% end  %>

<%end %>