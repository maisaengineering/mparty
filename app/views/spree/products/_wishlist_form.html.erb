<% if spree_current_user %>
  <div id="wishlist-form" class="col-xs-6">
    <%= form_for Spree::WishedProduct.new do |f| %>
      <%= f.hidden_field :variant_id, :value => @product.master.id %>
      <% max_quantity = 10 %>
        <h4>Quantity :</h4>
        <%= f.select :quantity ,options_for_select((1..10).to_a) ,{} , {:class => "form-control qty_width"}%>

      <button type="submit" class="col-xs-6 item_view_btn">
        <%= Spree.t(:add_to_wishlist) %>
      </button>
    <% end %>
  </div>
<% end %>
