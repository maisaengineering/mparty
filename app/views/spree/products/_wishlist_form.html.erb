<%= form_tag "/event/#{params[:event_id]}/wishlist/add_product" do |f| %>
    <%= hidden_field_tag :variant_id, @product.master.id %>
    <div class="col-md-12">
      <h4>Quantity</h4>
      <%= number_field_tag :quantity, 1,class: 'form-control addcart_select text_6',min: 1 %>
    </div>
    <div class="col-md-12">&nbsp;</div>
    <div class="col-md-12">
      <% if @product.master.can_supply? %>
          <button type="submit" class="btn btn-lg btn-primary btn-block add_qty_btn">
            <%= Spree.t(:add_to_wishlist) %>
          </button>
      <% else %>
          <br />
          <span class="out-of-stock"><%= Spree.t(:out_of_stock) %></span>
      <% end %>
    </div>
<% end %>
