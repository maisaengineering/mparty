<% if !@product.taxons.blank? %>
    <div class="col-md-12"  id="taxon-crumbs" data-hook>
      <h4 class="product-section-title"><%= Spree.t(:look_for_similar_items) %></h4>
      <div data-hook="product_taxons">
        <ul id="similar_items_by_taxon" data-hook>
          <% @product.taxons.each do |taxon| %>
              <li><%= link_to taxon.name, seo_url(taxon) %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
